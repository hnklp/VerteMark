<Window x:Class="VerteMark.SubWindows.JustSaveAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerteMark.SubWindows"
        mc:Ignorable="d"
        Title="Varování" ShowInTaskbar="False" Height="170" Width="350" Icon="../Pictures/icon.png" Closing="Window_Closing">
    <Grid>
        <TextBlock
                   TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Height="35" Width="304" Margin="0,22,0,0"><Run Text="Chcete uložit "/><Run Language="en-gb" Text="rozpracovanou anotaci?"/></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,57,0,0" Width="320" Height="58">
            <Button Content="Uložit rozpracované" Click="PreSaveAndContinue_Click" Width="95" Height="30" FontSize="10" Margin="5,5,40,5"/>
            <Button Content="Uložit" Width="94" Height="30" Margin="5" Click="SaveAndContinue_Click"/>
            <Button Content="Zpět" Width="70" Height="30" Margin="5" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
