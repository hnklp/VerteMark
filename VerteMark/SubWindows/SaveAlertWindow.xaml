<Window x:Class="VerteMark.SubWindows.SaveAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerteMark.SubWindows"
        mc:Ignorable="d"
        Title="" Height="170" Width="350">
    <Grid>
        <TextBlock Text="Před otevřením nového souboru musíte uložit dosavadní práci. Chcete uložit a uzavřít rozpracovanou práci a otevřít novou?"
                   TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="304" Margin="0,22,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,88,0,0">
            <Button Content="Uložit a otevřít nový projekt" Width="150" Margin="5" Click="SaveAndContinue_Click"/>
            <Button Content="Zpět k rozdělané práci" Width="150" Margin="5" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
