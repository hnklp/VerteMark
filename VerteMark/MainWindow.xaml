<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerteMark"
        xmlns:ObjectClasses="clr-namespace:VerteMark.ObjectClasses" x:Class="VerteMark.MainWindow"
        mc:Ignorable="d"
        Title="VerteMark" Height="450" Width="800" >
    <Grid>
        <!-- InkCanvas control -->
        <InkCanvas x:Name="inkCanvas" HorizontalAlignment="Left" VerticalAlignment="Top"
               Width="138" Height="154" Margin="30,26,0,0" Panel.ZIndex="99999" Background="Transparent"/>


        <Button Content="Uložit pic" HorizontalAlignment="Left" Margin="696,367,0,0" VerticalAlignment="Top" Height="57" Width="94" Click="Button_Click"/>
        <Button x:Name="LoginButt" Content="Přihlasit" HorizontalAlignment="Left" Margin="566,107,0,0" VerticalAlignment="Top" Height="37" Width="136" Click="LoginButt_Click"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Margin="540,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" Height="24" />
        <TextBlock x:Name="ANOTACEtext" HorizontalAlignment="Left" Margin="609,282,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Height="39" Width="121"/>
        <TextBlock HorizontalAlignment="Left" Margin="485,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="98"><Run Language="cs-cz" Text="Vybraná anotace:"/></TextBlock>
        <RadioButton Content="C1" HorizontalAlignment="Left" Margin="507,321,0,0" VerticalAlignment="Top" Height="20" Width="35"/>
        <RadioButton Content="C2" HorizontalAlignment="Left" Margin="507,347,0,0" VerticalAlignment="Top" Height="19" Width="35"/>
        <RadioButton Content="C3" HorizontalAlignment="Left" Margin="507,375,0,0" VerticalAlignment="Top" Height="21" Width="35"/>
        <Button x:Name="OpenProject" Content="Vybrat složku" HorizontalAlignment="Left" Margin="564,162,0,0" VerticalAlignment="Top" Height="37" Width="136" Click="OpenProject_Click"/>
        <Grid x:Name="loginRadioContainer" Margin="520,72,57,332">
            <RadioButton Content="Anotátor" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" GroupName="validator" IsChecked="True"/>
            <RadioButton Content="Validátor" HorizontalAlignment="Left" Margin="147,0,0,0" VerticalAlignment="Top" GroupName="validator"/>
        </Grid>
        <TextBlock x:Name="IDtext" HorizontalAlignment="Left" Margin="609,202,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Height="36" Width="121"/>
        <TextBlock HorizontalAlignment="Left" Margin="485,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="98" Text="Logged in ID:"/>
        <TextBlock x:Name="VALIDATORtext" HorizontalAlignment="Left" Margin="609,238,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Height="36" Width="121"/>
        <TextBlock HorizontalAlignment="Left" Margin="485,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="98" Text="Validátor:"/>
        <Image x:Name="ImageHolder" HorizontalAlignment="Left" Height="376" Margin="30,26,0,0" VerticalAlignment="Top" Width="414" Stretch="Fill"/>
    </Grid>

</Window>
