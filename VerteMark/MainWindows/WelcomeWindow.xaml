<blurwindow:BlurWindow x:Class="VerteMark.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerteMark"
        xmlns:blurwindow="clr-namespace:TianXiaTech;assembly=BlurWindow"
        mc:Ignorable="d"
        Title="VerteMark" Height="350" Width="350" ResizeMode="NoResize" Icon="../Pictures/icon.png" WindowStartupLocation="CenterScreen" BorderBrush="Transparent" TitleVisibility="Collapsed" MinimizeVisibility = "Collapsed" MaximizeVisibility="Collapsed" ContentSpan="True">

    <Window.Resources>
        <ImageBrush x:Key="watermark" ImageSource="../Pictures/textboxbackground.gif" AlignmentX="Left" Stretch="Uniform" />
    </Window.Resources>

    <Window.Background>
        <!--Specify transparency here-->
        <SolidColorBrush Color="#FF3E3A3A" Opacity=".45"/>
    </Window.Background>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="376" Height="346">
        <Rectangle HorizontalAlignment="Center" Height="24" VerticalAlignment="Top" Fill="#FF3E3A3A" Width="188" RadiusX="5.75" RadiusY="5.75" Margin="0,168,0,0">
            <Rectangle.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Rectangle.Resources>
        </Rectangle>

        <Label x:Name="HintLabel" Content="hintlabel" HorizontalContentAlignment="Center" Margin="40,131,52,0" VerticalAlignment="Top" Width="284" Height="26" Foreground="#FFF0F0F0"/>
        <Label Name="WelcomeLabel" Content="Vítejte ve VerteMark!" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#F0F0F0F0"/>

        <Button x:Name="SignInButton" Content="Přihlásit se" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="SignInButton_Click" IsEnabled="False" IsDefault="True">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>

        <RadioButton x:Name="AnotatorRadioButton" Content="Anotátor" HorizontalAlignment="Left" Margin="93,207,0,0" VerticalAlignment="Top" IsChecked="True" Height="19" Width="94" Checked="RadioButton_Hint" Foreground="#F0F0F0F0" FontSize="16" VerticalContentAlignment="Center"/>
        <RadioButton x:Name="ValidatorRadioButton" Content="Validátor" HorizontalAlignment="Left" Margin="199,208,0,0" VerticalAlignment="Top" Checked="RadioButton_Hint" Height="17" Width="84" Foreground="#F0F0F0F0" Background="White" FontSize="16" VerticalContentAlignment="Bottom"/>

        <TextBox x:Name ="IDTextBox" BorderBrush="Silver" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" TextChanged="OnTextBoxTextChanged" Background="{StaticResource watermark}" Height="24" TabIndex="0" Foreground="#F0F0F0F0" Margin="0,168,0,0" VerticalContentAlignment="Center">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Button x:Name="SettingsButtonUI_Kopírovat" Content="Debug" HorizontalAlignment="Left" Margin="21,154,0,0" VerticalAlignment="Top" Height="22" Width="45" Click="SettingsButtonUI_Kopírovat_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="26.193"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>

</blurwindow:BlurWindow>
