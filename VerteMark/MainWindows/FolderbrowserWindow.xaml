<Window x:Class="VerteMark.MainWindows.FolderbrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:VerteMark.MainWindows"
        mc:Ignorable="d" 
        d:DesignHeight="415" d:DesignWidth="800"
        Title="VerteMark" Height="415" Width="800" ResizeMode="NoResize" Icon="../Pictures/icon.png">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Levý sloupec pro přehled -->
        <Grid Grid.ColumnSpan="2" Margin="10,10,32,10">
            <TextBlock x:Name="SelectedRadioButtonTextBlock" Text="{Binding ElementName=DicomRadioButton, Path=Content}" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="30" Margin="30,12,0,0"/>
            <ListBox x:Name="FileListBox" d:ItemsSource="{d:SampleData ItemCount=15}" FontSize="14" Margin="30,76,270,60" Cursor="Hand" MouseDoubleClick="ContentDoubleClick"/>
        </Grid>

        <!-- Pravý sloupec pro RadioButtony a tlačítka -->


        <Grid Grid.ColumnSpan="2" Margin="10,26,0,0">
            <StackPanel Margin="539,0,0,0" VerticalAlignment="Center">
                <RadioButton x:Name="DicomRadioButton" Content="DICOM Soubory" Checked="RadioButton_Checked" FontSize="14" Margin="0,0,0,10" Width="448" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
                <RadioButton x:Name="InProgressRadioButton" Content="Rozpracované anotace" Checked="RadioButton_Checked" FontSize="16" Margin="0,0,0,10" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
                <RadioButton x:Name="ValidationRadioButton" Content="K validaci" Checked="RadioButton_Checked" FontSize="16" Margin="0,0,0,10" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
                <RadioButton x:Name="InvalidRadioButton" Content="Nevalidní snímky" Checked="RadioButton_Checked" FontSize="16" Margin="0,0,0,10" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
                <RadioButton x:Name="ValidatedRadioButton" Content="Validované snímky" Checked="RadioButton_Checked" FontSize="16" Margin="0,0,0,10" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
            </StackPanel>

            <Button x:Name="BackButton" Content="Zpět"  Click="BackButton_Click" IsEnabled="True" HorizontalAlignment="Left" Width="91" Margin="549,301,0,0" Height="32" VerticalAlignment="Top"/>
            <Button x:Name="ContinueButton" Content="Pokračovat" Click="ContinueButton_Click" IsEnabled="False" IsDefault="True" HorizontalAlignment="Left" Margin="660,301,0,0" VerticalAlignment="Top" Height="32" Width="91"/>
        </Grid>


    </Grid>
</Window>
