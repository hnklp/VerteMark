            <CheckBox Name="CheckBox5" Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="205,181,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.255,-0.061" IsChecked="True" Height="15" Width="20">
