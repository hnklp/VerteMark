            <Button Grid.Column="2" Content="C1" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top" Height="20" Width="125"/>
            <CheckBox Grid.Column="2" Content="" HorizontalAlignment="Left" Margin="205,61,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.255,-0.061" IsChecked="True" Height="15" Width="20">
                <CheckBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.25" ScaleY="1.25"/>
                    </TransformGroup>
