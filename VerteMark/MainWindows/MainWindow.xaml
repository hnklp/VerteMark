<Window x:Class="VerteMark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerteMark"
        mc:Ignorable="d"
        Title="VerteMark" Height="572" Width="1024" Icon="../Pictures/icon.png">


    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenFileItem_Click"/>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseItem_Click"/>
        <CommandBinding Command="ApplicationCommands.Properties" Executed="PropertiesItem_Click"/>
    </Window.CommandBindings>

    <DockPanel>
        <Menu Background="{Binding Background, ElementName=StatusBar}" DockPanel.Dock="Top">
            <MenuItem Header="Soubor">
                <MenuItem Command="Open">
                    <MenuItem.ToolTip>
                        <ToolTip Content="Otevře soubor" />
                    </MenuItem.ToolTip>
                </MenuItem>
                <MenuItem Command="Save" />
                <Separator />
                <MenuItem Command="ApplicationCommands.Close" />
            </MenuItem>
            <MenuItem Command="ApplicationCommands.Properties"/>
            <MenuItem Header="O aplikaci" Click="AboutItem_Click">
            </MenuItem>
        </Menu>
        <StatusBar Name="StatusBar" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <DockPanel LastChildFill="True">

                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock x:Name="UserIDStatus" Text="" />
                </StatusBarItem>

                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock x:Name="RoleStatus" Text="" />
                </StatusBarItem>



            </DockPanel>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- InkCanvas control -->
            <InkCanvas x:Name="inkCanvas" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="289" Height="241" Margin="10,10,0,0" Panel.ZIndex="99999" Background="Transparent" MouseUp="inkCanvas_MouseUp"/>

            <Image x:Name="ImageHolder" HorizontalAlignment="Left" Height="509" Margin="10,10,0,0" VerticalAlignment="Top" Width="583" Stretch="Fill" RenderTransformOrigin="-1.256,0.534"/>

            <!--Potrebujeme tedy ten toolbartray, nebo ne?-->
            
            <!--<ToolBarTray x:Name="MainToolBar" Background="{Binding Background, ElementName=StatusBar}" HorizontalAlignment="Left" Height="287" VerticalAlignment="Top" Width="38" Margin="735,0,0,0" Orientation="Vertical">

                <ToolBar Margin="1,0,118,-88" Background="{Binding Background, ElementName=StatusBar}">
                    <Button Content="&#xE105;" FontFamily="Segoe UI Symbol" FontSize="15" HorizontalAlignment="Left"/>
                    <Button Content="Placeholder! Vymyslet ikony!"/>
                </ToolBar>

            </ToolBarTray> --> 
            
            <Rectangle Grid.Column="2" Fill="{Binding Background, ElementName=StatusBar}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="3"/>


